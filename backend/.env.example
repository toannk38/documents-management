# Example environment variables for Legal Document Management System
# Copy this file to .env.development or .env.production and fill in the values

# App
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_DIALECT=postgres
DB_LOGGING=false

# JWT/Auth
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=your_refresh_secret
REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_SALT_ROUNDS=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mail
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email_user
MAIL_PASSWORD=your_email_password
MAIL_FROM=no-reply@example.com
MAIL_SECURE=false

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# File Upload
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Logger
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Session
SESSION_SECRET=your_session_secret
SESSION_MAX_AGE=86400000

# Swagger
SWAGGER_USER=admin
SWAGGER_PASSWORD=admin

# System
SYSTEM_ADMIN_EMAIL=admin@example.com
SYSTEM_SUPPORT_EMAIL=support@example.com

# Misc
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
